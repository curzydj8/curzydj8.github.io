:root{
  --bg1:#0f172a;
  --bg2:#3b82f6;
  --card:#ffffff;
  --muted:#6b7280;
  --accent:#2563eb;
}
*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  font-family:Segoe UI,Roboto,"PingFang SC","Microsoft Yahei",sans-serif;
  background:linear-gradient(135deg,var(--bg1),#0b1220 40%,var(--bg2));
  display:flex;align-items:center;justify-content:center;
  padding:24px;
  color:#0b1220;
}
.container{width:100%;max-width:420px}
.login-card{
  background:rgba(255,255,255,0.98);
  border-radius:12px;
  padding:28px;
  box-shadow:0 8px 30px rgba(2,6,23,0.6);
}
.brand{ text-align:center;margin-bottom:8px }
.brand h1{margin:0;font-size:20px;color:var(--bg1)}
.brand .subtitle{margin:4px 0 12px;color:var(--muted);font-size:13px}
.field{margin-bottom:14px}
label{display:block;margin-bottom:6px;font-size:13px;color:var(--bg1)}
input[type=text],input[type=password]{
  width:100%;padding:10px 12px;border-radius:8px;border:1px solid #e6e9ef;font-size:14px;
  background:#fff;outline:none;transition:box-shadow .15s,border-color .15s
}
input:focus{box-shadow:0 0 0 3px rgba(37,99,235,0.08);border-color:var(--accent)}
.pw-wrap{display:flex;gap:8px}
.pw-wrap input{flex:1}
.toggle-pw{
  background:transparent;border:1px solid #e6e9ef;padding:0 10px;border-radius:8px;cursor:pointer;color:var(--muted);
}
.actions{display:flex;align-items:center;justify-content:space-between;margin-top:6px}
.remember{font-size:13px;color:var(--muted)}
.btn{padding:10px 16px;border-radius:8px;border:none;cursor:pointer;font-weight:600}
.btn.primary{background:linear-gradient(90deg,var(--accent),#1e40af);color:white}
.links{display:flex;justify-content:space-between;margin-top:12px;font-size:13px}
.links a{color:var(--accent);text-decoration:none}
.error{color:#b91c1c;font-size:12px;height:16px;margin-top:6px}
.notice{margin-top:12px;font-size:14px;color:var(--accent);min-height:20px}

@media (max-width:420px){
  .login-card{padding:20px;border-radius:10px}
}
